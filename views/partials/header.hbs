<!-- * Navbar *-->
<!-- on a separate page b/c you want the navbar to show on every page-->

{{#each language}}
<div class="navbar-fixed">
  <!-- Product Dropdown Menu for Nav bar (place above nav tag) -->
  <ul id="dropdown" class="dropdown-content">
    <li class="black"><a href="/shop/honey">{{this.honey}}</a></li>
    <li class="divider"></li>
    <li class="black"><a href="/shop/mistletoe">{{this.mistletoe}}</a></li>
    <li class="divider"></li>
    <li class="black"><a href="/shop/salt">{{this.pink_salt}}</a></li>
    <li class="divider"></li>
    <li class="black"><a href="/shop/propolis">{{this.propolis}}</a></li>
  </ul>

  <nav class="white nav-extended">
    <div class="container">
      <div class="nav-wrapper">
        <a href="#" class="brand-logo center grey-text text-darken-2">{{this.title}}</a>
        <!-- Sidenav menu bar (only visible when collapsed to tablet or mobile size)-->
         <a href="#" data-target="mobile-nav" class="sidenav-trigger">
           <i id="menu" class="material-icons">menu</i>
         </a>
         <!-- Left side menu bar -->
         <ul class="left side-main-nav">
           <li>
             <a class="grey-text text-darken-2" href="./en">{{this.english}}</a>
           </li>
           <li>
             <a class="grey-text text-darken-2" href="./ko">{{this.korean}}</a>
           </li>
           <li>
             <a class="grey-text text-darken-2" href="./ch">{{this.chinese}}</a>
           </li>
         </ul>
         <!-- Menu (still part of Navbar)-->
         <!-- Lists menu on top, to the R of the brand-logo (class="right")
        Class hide-on-med~~ means hide the menu bar on screen size medium and below  -->
         <ul class="right side-main-nav hide-on-med-and-down">
           {{#if ../login }} <!-- login refers to req.locals.login from app.js, line 60-->
            <li><a class="waves-effect waves-light btn blue darken-3" href="/user/profile"><i class="fa fa-user" aria-hidden="true"></i> {{this.my_account}}</a></li>
            <li><a class="waves-effect waves-light btn blue darken-3" href="/user/logout">{{this.log_out}}</a></li>
           {{ else }}
           <li>
             <a class="grey-text text-darken-2" href="/user/login"><i class="fa fa-user" aria-hidden="true"></i> {{this.log_in}}</a>
           </li>
           <li>
             <a class="grey-text text-darken-2" href="/user/signup">{{this.sign_up}}</a>
           </li>
           {{/if}}
           <li>
             <a class="grey-text text-darken-2" href="/shopping/cart/">
               <i class="fa fa-shopping-cart cart-navbar" aria-hidden="true"></i> {{this.my_cart}}
               <span class="new badge">{{../session.cart.totalQty}}</span>
             </a>
           </li>
         </ul>
      </div>

      <!-- Main Navbar -->
      <div class="nav-content">
      <ul class="tabs tabs-transparent">
        <li class="tab">
          <a class="grey-text text-darken-2" href="#home">HOME</a>
        </li>
        <li class="tab">
          <a class="grey-text text-darken-2" href="/shop/all">SHOP</a>
        </li>
        <li class="tab">
          <a class="dropdown-trigger grey-text text-darken-2" data-target="dropdown">CATEGORIES<i class="ar material-icons right">arrow_drop_down</i></a>
        </li>
        <li class="tab">
          <a class="grey-text text-darken-2" href="#about">ABOUT US</a>
        </li>
        <li class="tab">
          <a class="grey-text text-darken-2" href="#contact">CONTACT</a>
        </li>
      </ul>
    </div>
    </div>
  </nav>
</div>

<!-- Navbar menu for mobile (sidebar menu) -->
    <!-- **id must match name for data-target up in the a link for the sidenav trigger bar
    Side bar nav won't show unless initialized with JS -->
    <ul class="sidenav" id="mobile-nav">
       <li>
         <a href="#home">HOME</a>
       </li>
       <li>
         <a href="#products">SHOP</a>
       </li>
       <li>
         <a href="#testimonials">CATEGORIES</a>
       </li>
       <li>
         <a href="#about">ABOUT US</a>
       </li>
       <li>
         <a href="#contact">CONTACT</a>
       </li>
       <li>
         <a href="#account">LOG IN/SIGN UP</a>
       </li>
     </ul>
{{/each}}
