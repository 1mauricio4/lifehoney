<!-- * Navbar *-->
<!-- on a separate page b/c you want the navbar to show on every page-->

{{#each language}}
<div class="navbar-fixed">
  <!-- Dropdown Menu for Categories in Nav bar (place above nav tag) -->
  <ul id="dropdown" class="dropdown-content">
    <li class="black"><a href="/shop/honey/{{languageCode}}">{{this.honey}}</a></li>
    <li class="divider"></li>
    <li class="black"><a href="/shop/mistletoe/{{languageCode}}">{{this.mistletoe}}</a></li>
    <li class="divider"></li>
    <li class="black"><a href="/shop/salt/{{languageCode}}">{{this.salt}}</a></li>
    <li class="divider"></li>
    <li class="black"><a href="/shop/propolis/{{languageCode}}">{{this.propolis}}</a></li>
  </ul>

  <nav class="white nav-extended">
    <div class="nav-bar">
      <div class="nav-wrapper">
        <a href="/" class="brand-logo center grey-text text-darken-2">{{this.title}}</a>
        <!-- Sidenav menu bar (only visible when collapsed to tablet or mobile size)-->
         <!-- <a href="#" data-target="mobile-nav" class="sidenav-trigger">
           <i id="menu" class="material-icons">menu</i>
         </a> -->
         <!-- Left side menu bar -->
         <ul class="left side-main-nav hide-on-med-and-down">
           <li>
             <a class="grey-text text-darken-2" href="./en">{{this.english}}</a>
           </li>
           <li>
             <a class="grey-text text-darken-2" href="./ko">{{this.korean}}</a>
           </li>
           <!-- Uncomment when Mandarin is made available  -->
           <!-- <li>
             <a class="grey-text text-darken-2" href="./ch">{ { this.chinese } }</a>
           </li> -->
         </ul>

         <!-- Displays lang icons for media screens (mobile & tablets)-->
         <ul class="left side-main-nav hide-on-large-only">
           <li class="lang">
             <a class="grey-text text-darken-2" href="./en">{{this.english_abb}}</a>
           </li>
           <li class="lang">
             <a class="grey-text text-darken-2" href="./ko">{{this.korean_abb}}</a>
           </li>
           <li class="lang-ch">
             <a class="grey-text text-darken-2" href="./ch">{{this.chinese_abb}}</a>
           </li>
         </ul>
         <!-- Menu (still part of Navbar)-->
         <!-- Lists menu on top, to the R of the brand-logo (class="right")
        Class hide-on-med~~ means hide the menu bar on screen size medium and below  -->
         <ul class="right side-main-nav hide-on-med-and-down">
           {{#if ../login }} <!-- login refers to req.locals.login from app.js, line 60-->
            <li><a class="waves-effect waves-light btn blue darken-3" href="/user/profile/{{languageCode}}">{{this.my_account}}</a></li>
            <li><a class="waves-effect waves-light btn blue darken-3" href="/user/logout">{{this.log_out}}</a></li>
           {{ else }}
           <li>
             <a class="grey-text text-darken-2" href="/user/login/{{languageCode}}"><i class="fa fa-user" aria-hidden="true"></i> {{this.log_in}}</a>
           </li>
           <li>
             <a class="grey-text text-darken-2" href="/user/signup/{{languageCode}}">{{this.sign_up}}</a>
           </li>
           {{/if}}
           <li>
             <a class="grey-text text-darken-2" href="/shopping/cart/{{languageCode}}">
               <i class="fa fa-shopping-cart cart-navbar" aria-hidden="true"></i> {{this.my_cart}}
               <span class="new badge">{{../session.cart.totalQty}}</span>
             </a>
           </li>
         </ul>

         <!-- Displays profile & cart icons for media screens (mobile & tablets)-->
         <ul class="right side-main-nav hide-on-large-only">
           {{#if ../login }} <!-- login refers to req.locals.login from app.js, line 60-->
            <li><a class="waves-effect waves-light btn blue darken-3" href="/user/profile/{{languageCode}}"><i class="fa fa-user" aria-hidden="true"></i></a></li>
            <li><a class="waves-effect waves-light btn blue darken-3" href="/user/logout">{{this.log_out}}</a></li>
           {{ else }}
           <li>
             <a class="grey-text text-darken-2" href="/user/login/{{languageCode}}"><i class="fa fa-user" aria-hidden="true"></i></a>
           </li>
           <li>
             <a class="grey-text text-darken-2" href="/user/signup/{{languageCode}}"></a>
           </li>
           {{/if}}
           <li>
             <a class="grey-text text-darken-2" href="/shopping/cart/{{languageCode}}">
               <i class="fa fa-shopping-cart cart-navbar" aria-hidden="true"></i>
               <span class="new badge">{{../session.cart.totalQty}}</span>
             </a>
           </li>
         </ul>
      </div>

      <!-- Main Navbar -->
      <div class="container">
        <div class="navbar-main-tabs center">
          <ul class="tabs tabs-transparent">
            <li class="">
              <a class="grey-text text-darken-2 center" href="/{{languageCode}}">{{this.home}}</a>
            </li>
            <li class="">
              <a class="grey-text text-darken-2 center" href="/shop/all/{{languageCode}}">{{this.shop}}</a>
            </li>
            <li class="">
              <a class="dropdown-trigger grey-text text-darken-2 center" data-target="dropdown">{{this.categories}}<i class="ar material-icons right">arrow_drop_down</i></a>
            </li>
            <li class="">
              <a class="grey-text text-darken-2 center" href="#about">{{this.about_us}}</a>
            </li>
            <li class="  ">
              <a class="grey-text text-darken-2 center" href="#contact">{{this.contact}}</a>
            </li>
          </ul>
        </div>
      </div>
    </div>
  </nav>
</div>

