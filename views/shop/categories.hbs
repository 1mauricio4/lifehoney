<!-- Products -->
<div class="row center shopall">
 <h3>CATEGORIES</h3>
 <!-- hashtag indicates a block statement; the each loop loops through all the products -->
 {{# each allproducts}}
   <div class="container">
     <div class="col s12 m4">
       <div class="card medium">
         <div class="card-image">
           <!-- imagePath is coming from within the products object in mlab -->
           <img class="responsive-img" src="../{{ this.imagePath }}">
           <!-- <span class="card-title">Card Title</span> -->
         </div>
         <div class="card-content">
           <p>{{this.title}}</p>
           <p>${{this.price}}</p>
         </div>
         <div class="card-action">
           <!-- value is what shows on the button -->
           <a href="/add-to-cart/{{this._id}}"><button type="cart" name="addToCart" value="Add To Cart" class="btn pink">Add To Cart</button></a>
         </div>
       </div>
     </div>
   </div>
{{/each}}
</div>
