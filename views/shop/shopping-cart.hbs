<!--* Shopping Cart Page *-->

<h2><i class="fa fa-shopping-cart"></i> SHOPPING CART</h2>

{{# if products}}

<div class="row">
  <div class="col s6 m6">
    <ul class="collection">
      {{# each products}}
      <li class="collection-item cart-list">
        <strong>{{ this.item.title }}</strong>
        <span class="label label-success">${{ this.price }}</span>
        <span class="badge">
          <a href="/reduce/{{this.item._id}}"><i class="fas fa-minus"></i></a>
          {{ this.qty }}
          <a href="/add-to-cart/{{this.item._id}}"><i class="fas fa-plus"></i></a>
          <br/><br/>
          <button type="button" name="button" class="btn white secondary-content"><a href="/remove/{{this.item._id}}">Remove</a></button>
        </span>
      </li>
      {{/each}}
    </ul>
  </div>
 </div>

  <div class="row">
    <div class="col s6 m6">
      <strong>Total: ${{ totalPrice }}</strong>
    </div>
  </div>
  <hr>
  <div class="row">
    <div class="col s6 m6">
      <a href="/cart/checkout"><button type="button" name="button" class="btn btn-success">Checkout</button></a>
    </div>
  </div>

{{ else }}
<!-- don't display anything if there's 0 items in cart -->
<div class="row">
  <div class="col s6 m6">
    <h2>No Items in Cart</h2>
  </div>
</div>

{{/if}}

<a href="/">Continue Shopping</a>
