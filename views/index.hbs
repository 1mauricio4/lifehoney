<!-- * Homepage * -->

<!-- <head> w/ links to css, google fonts, title, etc. is in layout.hbs
navbar is in in header.hbs but included (linked) in layout.hbs-->

<!-- After Checkout: redirect to main homepage & flash success message if you've successfully bought items -->
<div class="row">
  <div class="col s6 m4 offset-m4 offset-s3">
    <div id="success" class="alert alert-success" {{#if noMessage}}hidden{{/if}}>
      {{ successMsg }}
    </div>
  </div>
</div>

{{#each language}}
     <!-- Section: Slider (banner of photos sliding) -->
     <section class="slider">
       <!-- Copied whole ul section from materialize -->
       <ul class="slides">
         <li>
           <img src="/images/alfalfa.png" alt="Bee on alfalfa flowers">
           <div class="caption center-align">
             <h2>{{this.alfalfa_honey}}</h2>
             <!-- hide on small only hides subtext caption when browser is small -->
             <h5 class="light grey-text text-lighten-3 hide-on-small-only">{{this.grade_a_honey}}</h5>
          </div>
        </li>
        <li>
          <img src="/images/honey1.jpg" alt="Honey">
          <div class="caption right-align">
            <h2>{{this.great_for_your_health}}</h2>
            <h5 class="light grey-text text-lighten-3 hide-on-small-only">{{this.honey_has_many_health_benefits}}</h5>
          </div>
        </li>
        <li>
          <img src="/images/mistletoe.jpg" alt="Mistletoe">
          <div class="caption left-align">
            <h2>{{this.mistletoe}}</h2>
            <h5 class="light grey-text text-lighten-3 hide-on-small-only">{{this.organic_mistletoe}}</h5>
          </div>
        </li>
      </ul>
     </section>

     <!-- Section: Best Sellers -->
  <section class="section section-best-sellers grey lighten-4 center">
    <div class="row">
      <h3>BEST SELLERS</h3>
      <!-- hashtag indicates a block statement; the each loop loops through all the products -->
      {{# each ../products}}
        <div class="container">
          <div class="col s12 m4">
            <div class="card medium">
              <div class="card-image">
                <a href="/product/{{this._id}}" class="products-link">
                <!-- imagePath is coming from within the products object in mlab -->
                <img class="responsive-img" src="{{ this.imagePath }}">
                <!-- <span class="card-title">Card Title</span> -->
              </div>
              <div class="card-content">
                <p>{{this.title}}</p>
                <p>${{this.price}}</p>
              </div>
              </a>
              <div class="card-action">
                <!-- value is what shows on the button -->
                <a href="/add-to-cart/{{this._id}}"><button type="cart" name="addToCart" value="Add To Cart" class="btn pink">{{../add_to_cart}}</button></a>
              </div>
            </div>
          </div>
        </div>
    {{/each}}
    </div>
  </section>

     <!-- Section: Icon Boxes -->
     <!-- the bigger the # (m6, m7, etc), the bigger each card panel gets -->
     <section class="section section-icons grey lighten-4 center">
       <div class="container">
         <div class="row">
           <div class="col s12 m6">
             <div id="honey" class="card-panel">
               <a href="#honey" class="black-text">
                 <i class="material-icons large teal-text">spa</i>
                 <h4>{{this.honey}}</h4>
                 <p>{{this.grade_a_honey}}</p>
               </a>
             </div>
           </div>
           <div class="col s12 m6">
             <div id="mistletoe" class="card-panel">
               <a href="#mistletoe" class="black-text">
                 <i class="material-icons large teal-text">thumb_up</i>
                 <h4>{{this.mistletoe}}</h4>
                 <p>{{this.organic_mistletoe}}</p>
               </a>
             </div>
           </div>
           <div class="col s12 m6">
             <div id="pinksalt" class="card-panel">
               <a href="#pinksalt" class="black-text">
                 <i class="material-icons large teal-text">public</i>
                 <h4>{{this.pink_salt}}</h4>
                 <p>{{this.salt_from_bolivia}}</p>
               </a>
             </div>
           </div>
           <div class="col s12 m6">
             <div id="propolis" class="card-panel">
               <a href="#propolis" class="black-text">
                 <i class="material-icons large teal-text">favorite_border</i>
                 <h4>{{this.propolis}}</h4>
                 <p>{{this.propolis_from_canada}}</p>
               </a>
             </div>
           </div>
         </div>
       </div>
     </section>

     <!-- Section: Shipping info & location -->
     <section class="section section-shipping red lighten-5 center">
       <div class="container">
         <div class="row">
           <div class="center">
             <h3>
               <i class="fa fa-globe"></i>
               {{this.shipping_available_worldwide}}
             </h3>
           </div>
           <div class="col s12 m6">
             <div class="image">
               <img src="images/shipping.jpg" class="responsive-img" alt="Man Shipping">
             </div>
           </div>
             <div class="col s12 m6">
               <div class="location">
                 <ul class="collection with-header">
                   <li class="collection-header"><h4>Location</h4></li>
                   <li class="collection-item">Video Mart</li>
                   <li class="collection-item">363 S. Western Ave</li>
                   <li class="collection-item">LA, CA 90020</li>
                  <li class="collection-item">+1 (213) 381-2467</li>
                </ul>
             </div>
           </div>
         </div>
       </div>
     </section>

     <!-- Section: Contact -->
     <!-- Needs an id b/c part of our nav bar -->
     <section id="contact" class="section section-contact">
       <div class="container">
         <div class="row">
           <!-- col m6 means on med size & bigger, make it a 6 column div; becomes 1/2 & 1/2 of the page -->
           <div class="col s12 m6">
             <div class="card-panel red lighten-1 white-text center">
               <i class="material-icons large">email</i>
               <h5>{{this.contact}}</h5>
               <p>{{this.any_questions_or_comments}}</p>
             </div>
           </div>

           <!-- 2nd half of the container -->
           <div class="col s12 m6">
             <div class="card-panel grey lighten-3">
               <h5>{{this.form}}</h5>
               <div class="input-field">
                 <input type="text" placeholder="{{this.input_name}}" name="" value="">
               </div>
               <!-- why copy the div? why not just do multiple inputs? -->
               <div class="input-field">
                 <input type="text" placeholder="{{this.input_email}}" name="" value="">
               </div>
               <div class="input-field">
                 <!-- in materialize, need class="materialize-textarea" for text area to appear normal; usually dont need it -->
                 <textarea class="materialize-textarea" placeholder="{{this.input_enter_message}}"></textarea>
                 <input type="submit" name="" value="Submit" class="btn pink">
               </div>
             </div>
           </div>
         </div>
       </div>
     </section>

     <!-- Footer -->
     <footer class="section red lighten-2 white-text center">
       <!-- Class flow-text makes it bigger & responsive -->
       <p class="flow-text">Video Mart &copy; 2018</p>
     </footer>
{{/each}}
